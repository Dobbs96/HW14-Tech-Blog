{{#each posts}}
  <div class="card" style="width: 75%">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <h6 class="card-subtitle mb-2 text-muted">
        Posted by:
        {{username}}
        on
        {{created_at}}
      </h6>
      <p class="card-text">
        {{post}}
      </p>
      <a href="/comment" class="card-link comment">Comment</a>
    </div>
  </div>
{{/each}}